<div style="counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }}">
{% for post in postslist | reverse %}
	<div class="col-md-12 p-3">
	<a href="{{ post.url }}" class="text-dark row p-3 bg-white rounded">
	<div class="col-md-2">
{% if post.data.cover %}
	 <img class="img-fluid rounded" width="100%" height="100%" loading="lazy" alt="{{ post.data.title }}"
  height="100%" width="100%"
  src="{{post.data.cover}}"/>
  {% else %}<code>{{ post.url }}</code>{% endif %}
  </div>
  <div class="col-md-10 p-3">
  <h3><strong>{{ post.data.title }}</strong></h3>
  <p>{{ post.data.description }}</p>
  </div>
  </a>	
</div>
{% endfor %}
</div>